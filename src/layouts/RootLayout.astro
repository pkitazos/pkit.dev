---
import "../styles/global.css";

interface Props {
    title: string;
    id?: string;
}

const { title, id } = Astro.props;

const pageId = id ? id : title.toLowerCase().replace(/\s+/g, "-") + "-page";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon-black.svg" />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon-black.svg"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon-accent.svg"
            media="(prefers-color-scheme: dark)"
        />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Petros Kitazos</title>
    </head>
    <body
        class="text-foreground bg-background mx-20 relative min-h-svh flex flex-col"
        id={pageId}
    >
        <slot />
    </body>
</html>
